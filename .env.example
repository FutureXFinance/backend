# Environment Variables Template for Backend

# Security
SECRET_KEY=your-super-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=11520

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/futurex
MONGODB_URL=mongodb://localhost:27017/futurex

# Redis Cache
REDIS_URL=redis://localhost:6379

# Storage (Cloudflare R2 / AWS S3)
STORAGE_BUCKET=futurex-assets
STORAGE_ACCESS_KEY=your-access-key
STORAGE_SECRET_KEY=your-secret-key
STORAGE_ENDPOINT=https://your-account.r2.cloudflarestorage.com

# AI/ML Configuration
TESSERACT_CMD=C:/Program Files/Tesseract-OCR/tesseract.exe
MODEL_CACHE_DIR=./ai_models/cache

# API Configuration
MAX_UPLOAD_SIZE=26214400  # 25MB in bytes
ALLOWED_EXTENSIONS=jpg,jpeg,png,pdf

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,https://futurexfinance.vercel.app

# Railway/Production
RAILWAY_ENVIRONMENT=production
PORT=8000

# External APIs (Optional)
HUGGINGFACE_API_KEY=your-hf-api-key
